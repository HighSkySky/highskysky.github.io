{
  "name": "blog-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "lint": "eslint -c .eslintrc.json --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "prettier": "prettier --config .prettierrc --write \"src/**/*.{js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "antd": "^3.20.7",
    "classnames": "^2.2.6",
    "immer": "^3.1.3",
    "lodash": "^4.17.21",
    "querystring": "^0.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-motion": "^0.5.2",
    "react-router-dom": "^5.0.1",
    "use-immer": "^0.3.2"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.9",
    "@types/jest": "24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/node": "12.0.10",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/react-motion": "^0.0.29",
    "@types/react-router-dom": "^4.3.4",
    "babel-plugin-import": "^1.12.0",
    "customize-cra": "^0.2.14",
    "husky": "^2.7.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lint-staged": "^8.2.1",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3",
    "react-scripts": "3.0.1",
    "typescript": "3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.(js|ts|tsx)": [
      "npm run lint",
      "npm run prettier",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
